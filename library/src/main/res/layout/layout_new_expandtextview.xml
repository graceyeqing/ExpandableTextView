<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <cn.carbs.android.expandabletextview.library.ExpandableTextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#323233"
        android:lineSpacingExtra="5dp"
        app:etv_MaxLinesOnShrink="4"
        app:etv_ToShrinkHintShow="false"
        app:etv_ToExpandHintColor="#FFB76EFF"
        app:etv_showEndIcon="true"/>

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="#868686"
        android:textSize="10sp"
        android:lineSpacingExtra="5dp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/ll_shrink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right|center_vertical"
        android:visibility="gone">
        <TextView
            android:id="@+id/tv_shrink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收起"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="#FFB76EFF"
            android:textSize="14sp"
            android:gravity="right"/>
        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/icon_arrow_up0"/>
    </LinearLayout>


</LinearLayout>